#!/usr/bin/expect -f
set _ssh [lindex $argv 0]
set passwd  [lindex $argv 1]
set timeout 30
set substring "ssh"

eval spawn $_ssh

if {$passwd != ""} {
    expect {
        "yes/no" {
            send "yes\r";
            exp_continue
        }
        "assword:" {
            send "$passwd\r"
        }
        "*#" {
            #exit
            #exp_continue
            #send "echo 'Hello World!'\r"
        }
    }
}

if {$argc > 2} {
    set passwd2  [lindex $argv 2]
    send "$passwd2 \r"
    expect {
        "*$*" {
            send "su -\r"
            expect {
                "*ï¼š" {
                    send "$passwd2\r"
                }
            }
        }
    }
}

set results $expect_out(buffer)
if {[regexp -nocase "ssh" $_ssh]} {
    interact
}
